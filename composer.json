{
  "name": "benitoquib/git-deploy",
  "description": "Automated deployment package for shared hosting with GitLab webhooks support",
  "type": "library",
  "keywords": [
    "deployment",
    "gitlab",
    "webhook",
    "git",
    "shared-hosting",
    "ci-cd"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Benito Quib Che",
      "email": "benitoquib98@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/benitoquib/git-deploy"
    }
  ],
  "require": {
    "php": ">=7.4",
    "firebase/php-jwt": "^6.0",
    "czproject/git-php": "^4.0",
    "vlucas/phpdotenv": "^5.0",
    "monolog/monolog": "^2.0|^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "BenitoQuib\\GitDeploy\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BenitoQuib\\GitDeploy\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
